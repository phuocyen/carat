@model DoAN.ViewModel.LoginVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Login</h2>
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="row w-25 mx-auto" >
        <div class="col-md-12">
            @Html.LabelFor(temp => temp.Username)
            @Html.TextBoxFor(temp => temp.Username, new
       {
           placehoder =
               "Username",
           @class = "form-control"
       })
            @Html.ValidationMessageFor(temp => temp.Username)

        </div>
        
        <div class="col-md-12">
            @Html.LabelFor(temp => temp.Password)
            @Html.PasswordFor(temp => temp.Password, new
               {
                   placehoder =
                       "Password",
                   @class = "form-control"
               })
            @Html.ValidationMessageFor(temp => temp.Password)

        </div>
       
    </div>
     <div class="row w-25 mx-auto" >
         <div class="col-md-12">
             @Html.ValidationSummary()
             </div>
         <div class="col-md-4"></div>
         <div class="col-md-4">
             <button type="submit" class="btn btn-success">Login</button>

         </div>
     </div>
   }

